<!-- Custom CSS -->
<link rel="stylesheet" href="../../static/css/Jin/global.css" />
<!-- Content-->
<link rel="stylesheet" href="../../static/css/Jin/content.css" />

<!-- Top bar list-->
<script defer src="../../static/js/Jin/content_top_bar.js"></script>

<!-- Content -->
<div class="content">
  <div class="content-main">
    <!-- Top bar-->
    <section class="top-bar">
      <li class="top-bar-list">
        <% for (let i = 0; i < 8; ++i) { %>
        <div class="top-reels<%=i %>">
          <button class="top-reels-btn<%=i %>">
            <div class="top-reels-profile">
              <div class="top-reels-profile-shadow">
                <img
                  class="top-reels-profile-img"
                  src="../../static/src/Jin/top-bar/reels-<%=i %>.jpeg"
                  alt="top-reels-<%=i %>"
                />
              </div>
            </div>
            <div>
              <span>Id <%=i %></span>
            </div>
          </button>
        </div>
        <% } %>
      </li>
    </section>
    <!-- Post -->
    <div class="post">
      <div class="post-main">
        <li class="post-main-list">
          <!-- Post body -->
          <% for (let i = 0; i < 8; ++i) {%>
          <section class="post-body<%=i %>">
            <!-- Post header -->
            <div class="post-header">
              <div class="post-header-main">
                <a class="post-header-img">
                  <img
                    src="../../static/src/Jin/top-bar/reels-<%=i %>.jpeg"
                    alt="id-img-<%=i %>"
                  />
                </a>
                <div class="post-header-id">
                  <a href="">
                    <span class="id">id <%=i %></span>
                  </a>
                  <span class="date">
                    <%= `• ${Math.floor(Math.random() * 30)} days` %>
                  </span>
                </div>
              </div>
              <button class="post-header-btn">
                <svg
                  aria-label="옵션 더 보기"
                  class="_ab6-"
                  color="rgb(38, 38, 38)"
                  fill="rgb(38, 38, 38)"
                  height="24"
                  role="img"
                  viewBox="0 0 24 24"
                  width="24"
                >
                  <circle cx="12" cy="12" r="1.5"></circle>
                  <circle cx="6" cy="12" r="1.5"></circle>
                  <circle cx="18" cy="12" r="1.5"></circle>
                </svg>
              </button>
            </div>

            <!-- Post image -->
            <button class="post-image">
              <img
                id="random-post-image-<%=i %>"
                src=""
                alt="post-image-<%=i %>"
              />
            </button>

            <!-- Post main -->
            <div class="post-bottom">
              <!-- Post mid bar -->
              <section class="post-mid-bar">
                <div class="post-mid-bar-left">
                  <button class="like">
                    <svg
                      aria-label="좋아요"
                      class="x1lliihq x1n2onr6"
                      color="rgb(38, 38, 38)"
                      fill="rgb(38, 38, 38)"
                      height="24"
                      role="img"
                      viewBox="0 0 24 24"
                      width="24"
                    >
                      <title>좋아요</title>
                      <path
                        d="M16.792 3.904A4.989 4.989 0 0 1 21.5 9.122c0 3.072-2.652 4.959-5.197 7.222-2.512 2.243-3.865 3.469-4.303 3.752-.477-.309-2.143-1.823-4.303-3.752C5.141 14.072 2.5 12.167 2.5 9.122a4.989 4.989 0 0 1 4.708-5.218 4.21 4.21 0 0 1 3.675 1.941c.84 1.175.98 1.763 1.12 1.763s.278-.588 1.11-1.766a4.17 4.17 0 0 1 3.679-1.938m0-2a6.04 6.04 0 0 0-4.797 2.127 6.052 6.052 0 0 0-4.787-2.127A6.985 6.985 0 0 0 .5 9.122c0 3.61 2.55 5.827 5.015 7.97.283.246.569.494.853.747l1.027.918a44.998 44.998 0 0 0 3.518 3.018 2 2 0 0 0 2.174 0 45.263 45.263 0 0 0 3.626-3.115l.922-.824c.293-.26.59-.519.885-.774 2.334-2.025 4.98-4.32 4.98-7.94a6.985 6.985 0 0 0-6.708-7.218Z"
                      ></path>
                    </svg>
                  </button>
                  <button class="comment">
                    <svg
                      aria-label="댓글 달기"
                      class="x1lliihq x1n2onr6"
                      color="rgb(38, 38, 38)"
                      fill="rgb(38, 38, 38)"
                      height="24"
                      role="img"
                      viewBox="0 0 24 24"
                      width="24"
                    >
                      <title>댓글 달기</title>
                      <path
                        d="M20.656 17.008a9.993 9.993 0 1 0-3.59 3.615L22 22Z"
                        fill="none"
                        stroke="currentColor"
                        stroke-linejoin="round"
                        stroke-width="2"
                      ></path>
                    </svg>
                  </button>
                  <button class="share">
                    <svg
                      aria-label="게시물 공유"
                      class="x1lliihq x1n2onr6"
                      color="rgb(38, 38, 38)"
                      fill="rgb(38, 38, 38)"
                      height="24"
                      role="img"
                      viewBox="0 0 24 24"
                      width="24"
                    >
                      <title>게시물 공유</title>
                      <line
                        fill="none"
                        stroke="currentColor"
                        stroke-linejoin="round"
                        stroke-width="2"
                        x1="22"
                        x2="9.218"
                        y1="3"
                        y2="10.083"
                      ></line>
                      <polygon
                        fill="none"
                        points="11.698 20.334 22 3.001 2 3.001 9.218 10.084 11.698 20.334"
                        stroke="currentColor"
                        stroke-linejoin="round"
                        stroke-width="2"
                      ></polygon>
                    </svg>
                  </button>
                </div>
                <div class="post-mid-bar-right">
                  <button class="save">
                    <svg
                      aria-label="저장"
                      class="x1lliihq x1n2onr6"
                      color="rgb(38, 38, 38)"
                      fill="rgb(38, 38, 38)"
                      height="24"
                      role="img"
                      viewBox="0 0 24 24"
                      width="24"
                    >
                      <title>저장</title>
                      <polygon
                        fill="none"
                        points="20 21 12 13.44 4 21 4 3 20 3 20 21"
                        stroke="currentColor"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                      ></polygon>
                    </svg>
                  </button>
                </div>
              </section>
              <!-- Comment -->
              <section class="comment">
                <div class="comment-like">
                  <div class="comment-like-img">
                    <!-- add image in random -->
                    <a href="">
                      <img
                        src="../../static/src/Jin/top-bar/reels-<%=i %>.jpeg"
                        alt="id-img-<%=i %>"
                      />
                    </a>
                  </div>
                  <div class="comment-like-id-count">
                    <a href="">
                      <span class="comment-like-id">Random ID</span>
                    </a>
                    <span class="comment-like-count">
                      <%= `님 외 ${Math.round(Math.random() * 1000) / 10} 만
                      명이 좋아합니다` %>
                    </span>
                  </div>
                </div>
                <div class="comment-main">
                  <a href="#">
                    <span class="id">id<%=i %></span>
                  </a>
                  <span class="comment-tag">
                    <%=i %> Lorem ipsum dolor, sit amet consectetur adipisicing
                    elit. Exercitationem cumque delectus, quia laboriosam libero
                    consequuntur odio tempora. Tempora facilis aliquam quibusdam
                    ab error. Aspernatur aperiam quibusdam eos odit culpa quis?
                    <div class="tag">
                      <% for (let t = 0; t < 5; ++t) { %>
                      <a href="#">#Tag<%=i %></a>
                      <% } %>
                    </div>
                  </span>
                </div>
                <form class="form-comment" method="post">
                  <textarea
                    name="comment"
                    placeholder="댓글 달기..."
                  ></textarea>
                </form>
              </section>
            </div>
          </section>
          <% } %>
        </li>
      </div>
    </div>
  </div>
</div>

<!-- Shuffle images every page refresh -->
<script src="../../static/js/Jin/shuffle_images.js"></script>
